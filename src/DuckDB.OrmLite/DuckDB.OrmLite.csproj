<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>

    <!-- Package Information -->
    <PackageId>DuckDB.OrmLite</PackageId>
    <Version>1.3.0</Version>
    <Authors>CoinsTax LLC</Authors>
    <Company>CoinsTax LLC</Company>
    <Description>DuckDB provider for ServiceStack.OrmLite - A fast, simple, and typed ORM for .NET. Enables high-performance analytical queries and data processing with DuckDB's columnar storage engine. Multi-database support, async/await, connection timeout/retry, and generic factory! Community-maintained, not officially endorsed by ServiceStack.</Description>
    <PackageTags>DuckDB;OrmLite;ServiceStack;ORM;Database;Analytics;OLAP;DataProcessing;Async;MultiDatabase;Concurrency</PackageTags>
    <PackageProjectUrl>https://github.com/coinstax/DuckDB.OrmLite</PackageProjectUrl>
    <RepositoryUrl>https://github.com/coinstax/DuckDB.OrmLite</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>v1.3.0: Connection timeout/retry with exponential backoff for multi-process scenarios. Generic factory DuckDbOrmLiteConnectionFactory&lt;T&gt; for type-safe config. CRITICAL FIX: BeforeExecFilter now isolated to DuckDB only. 90 tests, 100% passing.</PackageReleaseNotes>

    <!-- Build Configuration -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ServiceStack.OrmLite" Version="8.5.2" />
    <PackageReference Include="DuckDB.NET.Data.Full" Version="1.3.0" />
  </ItemGroup>

</Project>
